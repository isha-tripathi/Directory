<h1>TWU Directory</h1>
<% if @entry %>
    <% errors = @entry.errors %>
    <% unless errors.nil? %>
        <% errors.each do |error| %>
            <div class="error"><%= "#{error.capitalize.to_s} #{errors[error].first}" %></div>
        <% end %>
    <% end %>
<% end %>
<%= form_for :entry, url: {action: 'create'} do |f| %>
    <%= f.label :name, 'Name: ' %>
    <%= f.text_field :name %>
    <%= f.label :batch_number, 'TWU Batch: ' %>
    <%= f.text_field :batch_number %>
    <%= f.label :phone_number, 'Phone Number: ' %>
    <%= f.phone_field :phone_number %>
    <%= f.submit 'Save' %>
<% end %>